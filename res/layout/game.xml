<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa" >

    <RelativeLayout
        android:id="@+id/game_linear_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btn_game_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/ic_logo" />

        <Button
            android:id="@+id/btn_game_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn_game_logo"
            android:layout_alignBottom="@+id/btn_game_logo"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:background="@drawable/ic_menu" />

        <TextView
            android:id="@+id/tv_time_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/time"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#635e5c"
            android:textSize="25sp" />
    </RelativeLayout>


        <LinearLayout
            android:id="@+id/game_num_in2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="18dp"
            android:orientation="horizontal" >

            <Button
                android:layout_width="28dp"
                android:layout_height="match_parent"
                android:background="#00000000" />

            <Button
                android:id="@+id/btn_game_num6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_num_button"
                android:shadowColor="#56707D"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="0.5"
                android:text="6"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_game_num7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_num_button"
                android:shadowColor="#56707D"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="0.5"
                android:text="7"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_game_num8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_num_button"
                android:shadowColor="#56707D"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="0.5"
                android:text="8"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_game_num9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_num_button"
                android:shadowColor="#56707D"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="0.5"
                android:text="9"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="28dp"
                android:layout_height="match_parent"
                android:background="#00000000" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/game_num_in2_lefttext"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="18dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="28dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/game_num6_in_lefttext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|right"
                android:paddingBottom="4dp"
                android:paddingRight="8dp"
                android:text="x6"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#BFCBD1" />

            <TextView
                android:id="@+id/game_num7_in_lefttext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|right"
                android:paddingBottom="4dp"
                android:paddingRight="8dp"
                android:text="x7"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#BFCBD1" />

            <TextView
                android:id="@+id/game_num8_in_lefttext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|right"
                android:paddingBottom="4dp"
                android:paddingRight="8dp"
                android:text="x8"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#BFCBD1" />

            <TextView
                android:id="@+id/game_num9_in_lefttext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|right"
                android:paddingBottom="4dp"
                android:paddingRight="8dp"
                android:text="x9"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#BFCBD1" />

            <TextView
                android:layout_width="28dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/game_num_in"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_above="@+id/game_num_in2"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_game_num1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_num_button"
                android:shadowColor="#56707D"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="0.5"
                android:text="1"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_game_num2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_num_button"
                android:shadowColor="#56707D"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="0.5"
                android:text="2"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_game_num3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_num_button"
                android:shadowColor="#56707D"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="0.5"
                android:text="3"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_game_num4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_num_button"
                android:shadowColor="#56707D"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="0.5"
                android:text="4"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_game_num5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_num_button"
                android:shadowColor="#56707D"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="0.5"
                android:text="5"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/game_num_in_lefttext"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_above="@+id/game_num_in2"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/game_num1_in_lefttext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|right"
                android:paddingBottom="4dp"
                android:paddingRight="8dp"
                android:text="x1"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#BFCBD1" />

            <TextView
                android:id="@+id/game_num2_in_lefttext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|right"
                android:paddingBottom="4dp"
                android:paddingRight="8dp"
                android:text="x2"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#BFCBD1" />

            <TextView
                android:id="@+id/game_num3_in_lefttext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|right"
                android:paddingBottom="4dp"
                android:paddingRight="8dp"
                android:text="x3"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#BFCBD1" />

            <TextView
                android:id="@+id/game_num4_in_lefttext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|right"
                android:paddingBottom="4dp"
                android:paddingRight="8dp"
                android:text="x4"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#BFCBD1" />

            <TextView
                android:id="@+id/game_num5_in_lefttext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|right"
                android:paddingBottom="4dp"
                android:paddingRight="8dp"
                android:text="x5"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#BFCBD1" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/game_relay_bottom_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/game_num_in"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" >
        </FrameLayout>

</RelativeLayout>